nav
  .nav-wrapper
    a.brand-logo {{ 'main.logo.title' | translate }}
    //ul#nav-mobile.right.hide-on-small-and-down
    //  li: a

div.home-main
  .container
    .row
      .col.s12
        .card-panel.head
          span.white-text {{ 'main.head.title' | translate }}
    .row
      .col.s12.m6
        ul.collection.with-header
          li.collection-header: h4 {{ 'main.blocks.title' | translate }}
          li.collection-item.avatar(ng-repeat="b in blocks | orderBy : 'number' : true")
            i.fa.fa-cube
            span.block-title Block {{ '#' + b.number }}
            p
              h5.paid.right.chip(ng-if="b.amount")
                span Received 
                span.amount {{ b.amount }}
                span units as tip
              span.issuer-title Issuer: 
              span.issuer {{ b.uid }}
      .col.s12.m6
        .row
          ul.collection.with-header.topx
            li.collection-header: h4 {{ 'main.top1.title' | translate }}
            li.collection-item.avatar(ng-repeat="user in top1 | orderBy : 'amount' : true")
              i.fa.fa-user
              span.issuer {{ user.blocks }}
              span.issuer-title &nbsp;blocks
              span.issuer-title &nbsp;by&nbsp;
              span.issuer {{ user.name }}
              p
                h5.paid.right.chip(ng-if="user.paid")
                  span.amount {{ 'main.earned' | translate }} {{ user.paid }} {{ unit }}
          ul.collection.with-header.topx
            li.collection-header: h4 {{ 'main.top2.title' | translate }}
            li.collection-item.avatar(ng-repeat="user in top2 | orderBy : 'amount' : true")
              i.fa.fa-user
              span.issuer {{ user.blocks }}
              span.issuer-title &nbsp;blocks
              span.issuer-title &nbsp;by&nbsp;
              span.issuer {{ user.name }}
              p
                h5.paid.right.chip(ng-if="user.paid")
                  span.amount {{ 'main.earned' | translate }} {{ user.paid }} {{ unit }}
